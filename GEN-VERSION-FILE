#!/bin/sh
# Based on git's GIT-VERSION-GEN.

VF=VERSION-FILE
DEF_VER=v2.2

LF='
'

if test -d .git -o -f .git &&
	VN=$(git describe --abbrev=0 --tags 2>/dev/null) &&
	case "$VN" in
	*$LF*) (exit 1) ;;
	v[0-9]*)
		git update-index -q --refresh
		test -z "$(git diff-index --name-only HEAD --)" ||
		VN="$VN-dirty" ;;
	esac
then
	VN=$(echo "$VN" | sed -e 's/-/./g');
else
	VN="$DEF_VER"
fi

VN=$(expr "$VN" : v*'\(.*\)')

if test -r $VF
then
	VC=$(sed -e 's/^VERSION=//' <$VF)
else
	VC=unset
fi
test "$VN" = "$VC" || {
	echo >&2 "VERSION=$VN"
	echo "VERSION=$VN" >$VF
}
